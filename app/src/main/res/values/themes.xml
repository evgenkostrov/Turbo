<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Turbo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@color/green</item>
        <item name="android:listDivider">@color/green</item>

    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="rippleColor">@color/whiteAlpha</item>
    </style>


    <style name="FontStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/poiret_one</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="BStyle" parent="android:Widget.Button">
        <item name="android:backgroundTint">@color/red</item>
        <item name="colorPrimary">@color/red</item>
    </style>

    <style name="TA" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:listDivider">@color/green</item>

    </style>

    <style name="ShapeAppearanceOverlay.CardView" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">20%</item>
        <item name="cornerSizeBottomRight">20%</item>
    </style>

<!--    <declare-styleable name="NavigationView">-->
<!--        <attr name="subheaderColor"> />-->

<!--    </declare-styleable>-->
</resources>